<h1>Create New Task</h1>

<%= form_for @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br><br>
  <%= f.label "Categories:" %>
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %><br><br>


  <%= f.label :description %><br>
  <%= f.text_area :description, size: "30x5" %><br>
  <%= f.submit %>
<% end %>