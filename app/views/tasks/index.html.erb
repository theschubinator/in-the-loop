<%= render 'admin_tools' if current_user.admin? %>

<h1>To DO List</h1>
<%= link_to "New Task", new_user_task_path %>

<h2>Current Tasks</h2>
<p><%= "You have no current tasks." if @current_tasks.empty? %></p>

<ol>
<% @current_tasks.each do |task| %>
  <%= render 'tasks', task: task %>
<% end %>
</ol>

<h2>Completed Tasks</h2>
<p><%= "You have not completed any tasks." if @current_tasks.empty? %></p>

<ol>
<% @completed_tasks[0..4].each do |task| %>
  <%= render 'tasks', task: task %>
<% end %>
</ol>


<%= link_to "View All Completed Tasks", user_completed_tasks_path(current_user) %>